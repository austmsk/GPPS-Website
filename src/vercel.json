{
  "version": 2,
  "builds": [
    { "src": "api/**/*.js", "use": "@vercel/node" },
    { "src": "/**/*", "use": "@vercel/static" }
  ],
  "redirects": [
    {
      "source": "/",
      "destination": "/home-page.html",
      "permanent": true
    }
  ],
  "headers": [
    {
      "source": "/(.*)\\.(jpg|png|gif|svg|webp|css|js)$",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/submit_contact_form",
      "destination": "/api/submit-contact-form.js"
    }
  ]
}

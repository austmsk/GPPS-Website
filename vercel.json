{
"version": 2,
  "builds": [
    {
      "src": "src/api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "src/**/*.{html,css,js,jpg,png,gif,svg,webp,pdf}",
      "use": "@vercel/static"
    }
  ],
  "redirects": [
    {
      "source": "/",
      "destination": "/src/home-page.html",
      "permanent": true
    }
  ],
  "headers": [
    {
      "source": "/(.*)\\.(jpg|png|gif|svg|webp|css|js)$",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ], 
"rewrites": [
  {
    "source": "/submit-contact-form",
    "destination": "/submit-contact-form.js"
  },
  {
    "source": "/admin/submissions",
    "destination": "/src/api/admin-submissions"
  }
]

} 